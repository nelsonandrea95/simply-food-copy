<section class="Container Section {% unless section.settings.image %}Section--spacingNormal{% endunless %}">
  {%- capture section_content -%}
    <div class="FeatureText__ContentWrapper">
      <div class="FeatureText__Content">
        {%- if section.settings.subheading != blank or section.settings.title != blank -%}
          <header class="SectionHeader">
            {%- if section.settings.subheading != blank -%}
              <h3 class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.subheading | escape }}</h3>
            {%- endif -%}

            {%- if section.settings.title != blank -%}
              <h2 class="SectionHeader__Heading Heading u-h1 rece">{{ section.settings.title | escape }}</h2>
            {%- endif -%}
<div class="ProductList ProductList--grid ProductList--removeMargin Grid Gridrecipsec">
            <div class="Grid__Cell 1/2--phone 1/2--tablet 1/4--lap-and-up">  
              <div class="Feature__rec_image">
				 <img class="Image--lazyLoad Image--slide" src="{{ section.settings.image1  | img_url: 'x480'  }}" data-src="{{ image_url }}" data-expand="-200" data-widths="[{{ supported_sizes }}]" data-sizes="auto" alt="{{ section.settings.image.alt | escape }}">
                <p>{{ section.settings.content1 }}</p>
              </div>
            </div>
            <div class="Grid__Cell 1/2--phone 1/2--tablet 1/4--lap-and-up">  
              <div class="Feature__rec_image">
				 <img class="Image--lazyLoad Image--slide" src="{{ section.settings.image2  | img_url: 'x480'  }}" data-src="{{ image_url }}" data-expand="-200" data-widths="[{{ supported_sizes }}]" data-sizes="auto" alt="{{ section.settings.image.alt | escape }}">

                <p>{{ section.settings.content2 }}</p>
              </div>
            </div>
            <div class="Grid__Cell 1/2--phone 1/2--tablet 1/4--lap-and-up">  
              <div class="Feature__rec_image">
				 <img class="Image--lazyLoad Image--slide" src="{{ section.settings.image3  | img_url: 'x480'  }}" data-src="{{ image_url }}" data-expand="-200" data-widths="[{{ supported_sizes }}]" data-sizes="auto" alt="{{ section.settings.image.alt | escape }}">

                <p>{{ section.settings.content3 }}</p>
              </div>
            </div>
            <div class="Grid__Cell 1/2--phone 1/2--tablet 1/4--lap-and-up">  
              <div class="Feature__rec_image">
				 <img class="Image--lazyLoad Image--slide" src="{{ section.settings.image4  | img_url: 'x480'  }}" data-src="{{ image_url }}" data-expand="-200" data-widths="[{{ supported_sizes }}]" data-sizes="auto" alt="{{ section.settings.image.alt | escape }}">

                <p>{{ section.settings.content4 }}</p>
              </div>
            </div>
            </div>
            <br>
            {%- if section.settings.link_text != blank -%}
              <a href="{{ section.settings.link_url }}" class="Button Button--primary">{{ section.settings.link_text | escape }}</a>
            {%- endif -%}
          </header>
        {%- endif -%}
      </div>
    </div>
  {%- endcapture -%}

 
  <div class="FeatureText {% if section.settings.image != blank %}FeatureText--withImage FeatureText--image{{ section.settings.image_position | capitalize }}{% endif %}">
    {%- if section.settings.image_position == 'left' -%}
      {{- section_image -}}
      {{- section_content -}}
    {%- else -%}
      {{- section_content -}}
      {{- section_image -}}
    {%- endif -%}
  </div>
</section>

