<section class="Section" id="section-{{ section.id }}">
    <div class="banner-fullwidth" {% if section.settings.wide-image %}style="background: url({{ section.settings.wide-image | img_url: 'full', format: 'pjpg' }});"{% endif %}></div>
    <div class="container">
        <div class="row">
            {%- if section.settings.restaurant-name != blank -%}
                <div class="smk-block-title">
                    <h1 class="smk-title">{{ section.settings.restaurant-name | escape }}</h1>
                </div>    
            {%- endif -%}
            {%- if section.settings.restaurant-location != blank -%}
                <div class="restaurant-city">
                    <img class="icon-map" src="{{ 'pin-map.png' | asset_url }}" />
                    <span>{{ section.settings.restaurant-location }}</span>
                </div>
            {%- endif -%}    
            {%- if section.settings.short-description != blank -%}
                <p class="smk-description-small">{{ section.settings.short-description }}</p>
            {%- endif -%}    
        </div>
    </div>
</section>

<style>
    .banner-fullwidth{
        width:100%;
        height:50vh;
        background-position:center !important;
        background-size: cover !important;
        background-repeat: no-repeat !important;
        border-bottom: solid #E63C00 10px;    
    }
    .smk-block-title{
        margin-top: 35px;
    }
    .restaurant-city{
        display: flex;
        text-align: center;
        margin: 0 0 25px 0;
        justify-content: center;
        align-items: center;
    }
    .smk-description-small{
        text-align: justify;
    }
    .restaurant-city .icon-map{
        margin-right:5px;
    }
  	@media (max-width:768px){
    	.banner-fullwidth{
            height:140px;    
        }
    }
</style>

{% schema %}
    {
        "name": "Collaboration information",
        "settings": [ 
            {
                "type": "text",
                "id": "restaurant-name",
                "label": "Restaurant name",
                "default": "Restaurant name"
            },
            {
                "type": "text",
                "id": "restaurant-location",
                "label": "Restaurant location",
                "default": "City"
            },
            {
                "type": "textarea",
                "id": "short-description",
                "label": "Short description",
                "default": "A short description of the restaurant"
            },
            {
                "type": "image_picker",
                "id": "wide-image",
                "label": "Restaurant wide image"
            }

        ]
    }
{% endschema %}