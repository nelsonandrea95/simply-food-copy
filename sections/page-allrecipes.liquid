<div class="shopify-section smk-content" data-smk-section-location="above">
  <div class="nomargin container-indent sectionbigbanners1601066642377uny">
    <div class="container-fluid" data-smk-section-type="smk_big_banners">
      <div class="row no-gutter"><div class="col-sm-12 respimgsize blid16010666423771uny" id="section16010666423771uny">
                  <div class="smk-promo-fullwidth backgroundpara PageHeader__Imageerr"  style="background:url('{{ section.settings.banner_image | img_url: 'x480' }}');background-position:50% -130px;">

                        <!--img class="lazyload" src="{{ section.settings.banner_image | img_url: 'x480' }}" data-src="{{ section.settings.banner_image | img_url: 'x480' }}" alt=""-->
                      
<div class="smk-description normal">
                      <div class="smk-description-wrapper text-center">
                        
                        <div class="smk-title-large" style="color:#ffffff">
                        {{ section.settings.reheading | escape }}
                        </div>
                        
                        
                      </div>
                    </div></div></div></div>
    </div>
  </div>
</div>
 <div class="ArticleListWrapper ArticleListWrapperRe">
      <div class="ArticleList Grid Grid--m Grid--center">

 {% for block in section.blocks %}
    <div class="Grid__Cell 1/3--tablet 1/4--lap-and-up">	
     <a href="{{ block.settings.recipe_link }}">  <img src="{{ block.settings.recipe-image | img_url: '340x510' }}">
       <h4 class="item-name">
           {{ block.settings.recipe-title | escape }}
       </h4>  
      </a>
    </div>
{% endfor %}
   </div>
   
</div>


{% schema %}
{
	"name": "add-recipe",
	"blocks": [
    		{
    			"type": "image",
    			"name": "items-entry",
    			"settings": [
                  {
                    "type": "image_picker",
                    "id": "recipe-image",
                    "label": "Image of the product"
                  },
                  {
                    "type": "text",
                    "id": "recipe-title",
                    "label": "Title",
                    "default": "Title of this product"
                  },
                  {
						"type": "url",
     				 "id": "recipe_link",
    			  "label": "Recipe link"
                  }
    			]
    		}
	],
"settings": [
    {
      "type": "text",
      "id": "reheading",
      "label": "Heading"
    },
    
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Image",
      "info": "1500 x 800px .jpg recommended"
    }
]

}
{% endschema %}